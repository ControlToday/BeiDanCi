<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/dark_theme_on"
        android:persistent="true"
        android:title="@string/dark_theme"
        app:iconSpaceReserved="false" />
    <Preference
        android:key="@string/theme_setting"

        android:title="主题设置"
        app:iconSpaceReserved="false">

    </Preference>

    <Preference
        android:key="@string/download_book_pref"

        android:title="@string/download_book_pref"
        app:iconSpaceReserved="false">

    </Preference>

    <Preference
        android:defaultValue="10"

        android:dialogTitle="每日应学单词数"
        android:inputType="number"
        android:key="@string/should_learn"
        android:title="学习计划"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="@string/advance_setting"

        android:title="高级设置"
        app:iconSpaceReserved="false" />
    <Preference
        android:key="@string/about_app"
        android:title="@string/about_app_str"
        app:iconSpaceReserved="false"/>

</androidx.preference.PreferenceScreen>