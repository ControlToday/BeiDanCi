<resources>

    <style name="CustomToolbarStyle" parent="@style/BaseToolbarStyle">
        <item name="android:background">@android:color/white</item>
        <item name="titleTextAppearance">@style/NavigationDrawerTextStyle</item>
    </style>

    <style name="NavigationDrawerTextStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/app_content_main_color</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:actionMenuTextColor">@color/app_content_main_color</item>
        <item name="contentInsetStart">0.0dip</item>
        <item name="contentInsetStartWithNavigation">0.0dip</item>
        <item name="navigationIcon">?homeAsUpIndicator</item>
    </style>
    <style name="CustomToolbarTheme">
        <item name="toolbarNavigationButtonStyle">@style/NavigationStyle</item>
    </style>
    <style name="NavigationStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:background">@drawable/btn_press_circle_shape</item>
    </style>
</resources>
