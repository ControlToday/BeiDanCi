<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.jk.beidanci.learnword.LearnWordActivity">

    <LinearLayout
        android:id="@+id/topLyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        android:orientation="vertical">


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-8dp"
            android:layout_marginTop="-6dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/wordCardColor"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/cardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?colorAccent"
                    android:weightSum="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/englishTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:tag=":aesthetic_ignore"
                        android:text="Hello World!"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/phoneticTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="此处是音标"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/coreImg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="3dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/star_white" />

                    <ImageView
                        android:id="@+id/voiceBtn"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="3dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_volume" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/learnRecordLyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/DescText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="认识次数" />

                            <TextView
                                android:id="@+id/knownTimeTxt"
                                style="@style/ValueText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10" />

                            <TextView
                                style="@style/DescText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="不认识次数" />

                            <TextView
                                android:id="@+id/unknownTimeTxt"
                                style="@style/ValueText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/DescText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="上次学习时间" />

                            <TextView
                                android:id="@+id/lastLearnTimeTxt"
                                style="@style/ValueText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10-10 3:5" />

                        </LinearLayout>

                    </LinearLayout>


                    <ScrollView

                        android:id="@+id/wordDescLyt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/transTxt"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="翻译的内容,仅显示汉语,最多三行" />

                            <LinearLayout

                                android:id="@+id/phraseLyt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@android:color/darker_gray" />

                                <TextView
                                    style="@style/fieldDescStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="短语" />

                                <TextView

                                    android:id="@+id/phraseTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="一些短语\n能在一行尽量在一行,\n最多的话可能是6行" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/sentenceLyt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@android:color/darker_gray" />

                                <TextView
                                    style="@style/fieldDescStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="例句" />

                                <TextView

                                    android:id="@+id/sentenceTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="一些例句\n每个大概是两行的样子\n最多的话可能是6行" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/remMethodLyt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@android:color/darker_gray" />

                                <TextView
                                    style="@style/fieldDescStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="记忆方法" />

                                <TextView

                                    android:id="@+id/remMthodTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="最多两行." />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/relsLyt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@android:color/darker_gray" />

                                <TextView
                                    style="@style/fieldDescStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="同根词" />

                                <TextView

                                    android:id="@+id/relsTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="三行最多" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/hwdLyt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@android:color/darker_gray" />

                                <TextView
                                    style="@style/fieldDescStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="近义词" />

                                <TextView

                                    android:id="@+id/hwdTxt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="也就两行" />
                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/collectBtn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="bottom|right"
                android:layout_margin="8dp"
                android:background="@drawable/ic_star_deep_blue_24dp" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp">


        <Button
            style="@style/setStateBtn"
            android:id="@+id/unknownBtn"
            android:layout_height="wrap_content"
            android:text="不认识" />

        <Button
            style="@style/setStateBtn"
            android:layout_marginLeft="16dp"
            android:id="@+id/knowBtn"

            android:layout_height="wrap_content"
            android:text="认识" />


    </LinearLayout>

</RelativeLayout>
